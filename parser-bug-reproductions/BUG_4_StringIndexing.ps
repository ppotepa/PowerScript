FUNCTION GET_FIRST_CHAR(STRING s)[STRING] {
    // THIS SYNTAX NOT SUPPORTED
    // STRING c = s[0]
    
    // WORKAROUND: Use Substring
    STRING c = s -> Substring(0, 1)
    RETURN c
}

