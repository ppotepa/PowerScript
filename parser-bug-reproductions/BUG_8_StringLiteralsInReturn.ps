// Error: "expected identifier or value or parenthesisopen"
// Problem: Parser fails when returning string literals from functions

FUNCTION BOOL_TO_STRING(INT bool_val)[STRING] {
    IF bool_val == 1 {
        RETURN "true"  // THIS LINE CAUSES: expected identifier or value or parenthesisopen
    }
    RETURN "false"     // THIS LINE ALSO CAUSES THE ERROR
}

FUNCTION GET_STATUS(INT code)[STRING] {
    IF code == 0 {
        RETURN "OK"    // THIS LINE CAUSES: expected identifier or value or parenthesisopen
    }
    IF code == 1 {
        RETURN "ERROR"
    }
    RETURN "UNKNOWN"
}
