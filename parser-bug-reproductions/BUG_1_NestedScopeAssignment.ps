// BUG #1: Variable Assignment in Nested Scopes
// Error: "Unexpected token type: EqualsToken"
// Problem: Cannot assign to variables inside IF blocks or CYCLE loops in multi-function files

FUNCTION INCREMENT_IF_POSITIVE(INT value)[INT] {
    INT result = value
    
    IF value > 0 {
        result = result + 1  // THIS LINE CAUSES: Unexpected token type: EqualsToken
    }
    
    RETURN result
}

FUNCTION DOUBLE_IF_POSITIVE(INT value)[INT] {
    INT result = value
    
    IF value > 0 {
        result = result * 2  // THIS LINE CAUSES: Unexpected token type: EqualsToken
    }
    
    RETURN result
}
