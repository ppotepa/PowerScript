// BUG #2: CYCLE Scope Variable Access
// Error: "Variable 'result' is not declared"
// Problem: Variables from function scope not accessible in CYCLE scopes (multi-function files only)

FUNCTION POWER_OF_TWO(INT n)[INT] {
    INT result = 1
    
    CYCLE n AS i {
        result = result * 2  // THIS LINE CAUSES: Variable 'result' is not declared
    }
    
    RETURN result
}

FUNCTION FACTORIAL(INT n)[INT] {
    INT result = 1
    
    CYCLE n AS i {
        result = result * i  // THIS LINE CAUSES: Variable 'result' is not declared
    }
    
    RETURN result
}
