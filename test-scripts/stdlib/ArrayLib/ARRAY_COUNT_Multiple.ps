// LINK "scripts/stdlib/ArrayLib.ps"

FUNCTION ARRAY_COUNT(INT CHAIN arr, INT size, INT value)[INT] {
    FLEX count = 0
    CYCLE size AS i {
        FLEX elem = arr[i]
        IF elem == value {
            count = count + 1
        }
    }
    RETURN count
}

// Test: ARRAY_COUNT - Count occurrences of 5
INT arr = CHAIN 6 WITH 5, 3, 5, 7, 5, 2
FLEX result = ARRAY_COUNT(arr, 6, 5)
PRINT result
// Expected: 3
