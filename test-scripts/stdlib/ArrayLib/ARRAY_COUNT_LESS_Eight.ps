// LINK "scripts/stdlib/ArrayLib.ps"

// Inlined function
FUNCTION ARRAY_COUNT_LESS(INT CHAIN arr, INT size, INT threshold)[INT] {
    FLEX count = 0
    CYCLE size AS i {
        FLEX elem = arr[i]
        IF elem < threshold {
            count = count + 1
        }
    }
    RETURN count
}

// Test: ARRAY_COUNT_LESS - Count elements below threshold
FLEX arr = CHAIN OF [5, 12, 8, 3, 15, 7]
FLEX result = ARRAY_COUNT_LESS(arr, 6, 8)
PRINT result
// Expected: 3 (5, 3, and 7)
