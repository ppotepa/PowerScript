// Inlined function
FUNCTION ARRAY_COUNT_GREATER(INT CHAIN arr, INT size, INT threshold)[INT] {
    FLEX count = 0
    CYCLE size AS i {
        FLEX elem = arr[i]
        IF elem > threshold {
            count = count + 1
        }
    }
    RETURN count
}

// Test: ARRAY_COUNT_GREATER - Count elements above threshold
FLEX arr = CHAIN OF [5, 12, 8, 3, 15, 7]
FLEX result = ARRAY_COUNT_GREATER(arr, 6, 10)
PRINT result
// Expected: 2 (12 and 15)
