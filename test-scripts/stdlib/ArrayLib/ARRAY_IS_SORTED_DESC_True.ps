FUNCTION ARRAY_IS_SORTED_DESC(INT CHAIN arr, INT size)[INT] {
    IF size <= 1 {
        RETURN 1
    }
    FLEX prev = arr[0]
    CYCLE size AS i {
        FLEX elem = arr[i]
        IF elem > prev {
            RETURN 0
        }
        prev = elem
    }
    RETURN 1
}

// Test: ARRAY_IS_SORTED_DESC - Check descending order
INT arr = CHAIN 5 WITH 5, 4, 3, 2, 1
FLEX result = ARRAY_IS_SORTED_DESC(arr, 5)
PRINT result
// Expected: 1
