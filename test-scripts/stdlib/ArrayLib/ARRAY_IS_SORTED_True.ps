FUNCTION ARRAY_IS_SORTED(INT CHAIN arr, INT size)[INT] {
    IF size <= 1 {
        RETURN 1
    }
    FLEX prev = arr[0]
    CYCLE size AS i {
        FLEX elem = arr[i]
        IF elem < prev {
            RETURN 0
        }
        prev = elem
    }
    RETURN 1
}

// Test: ARRAY_IS_SORTED - Check ascending order
INT arr = CHAIN 5 WITH 1, 2, 3, 4, 5
FLEX result = ARRAY_IS_SORTED(arr, 5)
PRINT result
// Expected: 1
