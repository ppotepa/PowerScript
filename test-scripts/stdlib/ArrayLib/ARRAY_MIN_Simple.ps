// Inlined function
FUNCTION ARRAY_MIN(INT CHAIN arr, INT size)[INT] {
    IF size <= 0 {
        RETURN 0
    }
    FLEX min_val = arr[0]
    CYCLE size AS i {
        FLEX elem = arr[i]
        IF elem < min_val {
            min_val = elem
        }
    }
    RETURN min_val
}

// Test: ARRAY_MIN - Find minimum element
FLEX arr = CHAIN OF [5, 2, 8, 1, 9]
FLEX result = ARRAY_MIN(arr, 5)
PRINT result
// Expected: 1
