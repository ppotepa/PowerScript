// syntax_object_nested.ps
// Test: Nested objects and property chaining

LINK System

PRINT "=== Nested Objects ==="

FLEX outer = {inner = {value = 42, flag = 1}}
FLEX str = outer -> ToString()
FLEX dummy = Console -> WriteLine(str)

PRINT "=== Accessing Nested Object ==="
FLEX inner = outer.inner
FLEX innerStr = inner -> ToString()
FLEX dummy2 = Console -> WriteLine(innerStr)

PRINT "=== Accessing Deep Properties ==="
FLEX value = inner.value
FLEX valueStr = value -> ToString()
FLEX dummy3 = Console -> WriteLine(valueStr)

FLEX flag = inner.flag
FLEX flagStr = flag -> ToString()
FLEX dummy4 = Console -> WriteLine(flagStr)

PRINT "Test completed successfully"
